    }
    .char-placeholder {
        width: 100%;
        height: 250px;
        background: rgba(255,255,255,0.5);
        border: 2px dashed #9ca3af;
        border-radius: 1rem;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #666;
    }

    /* Section */
