---
export const prerender = true;
import Layout from '../../layouts/Layout.astro';
import Sidebar from '../../components/Sidebar.astro';
import TradeCard from '../../components/TradeCard.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('daily-trades')).sort(
	(a, b) => {
        const dateA = a.data.date ? new Date(a.data.date).valueOf() : 0;
        const dateB = b.data.date ? new Date(b.data.date).valueOf() : 0;
        return dateB - dateA;
    }
);
---

<Layout title="実践記録一覧 - トレ太のFX実践日記">
    <div class="main-container container">
        <div class="content-area">
            <h1 class="page-title">実践記録一覧</h1>
            
            {allPosts.length > 0 ? (
                <div class="article-grid">
                    {allPosts.map(post => (
                        <TradeCard entry={post} />
                    ))}
                </div>
            ) : (
                <div class="empty-state">
                    <p>記事はまだありません。</p>
                    <p>これからトレード記録を積み上げていきます！</p>
                </div>
            )}
        </div>
        <Sidebar />
    </div>
</Layout>

<style>
    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 1rem;
    }
    .main-container {
        display: grid;
        grid-template-columns: 1fr 300px;
        gap: 2.5rem;
        margin-top: 3rem;
        margin-bottom: 4rem;
    }
    .page-title {
        font-size: 1.8rem;
        margin-bottom: 2rem;
        border-bottom: 2px solid var(--c-primary);
        padding-bottom: 0.5rem;
    }
    .article-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }
    .empty-state {
        text-align: center;
        padding: 3rem;
        background: #f9fafb;
        border-radius: 8px;
        color: var(--c-text-light);
    }
    @media (max-width: 768px) {
        .main-container { grid-template-columns: 1fr; }
    }
</style>
